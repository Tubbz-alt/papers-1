\defbeamertemplate*{frametitle}{hci}[1][left]
{
  \@tempdima=\textwidth%
  \advance\@tempdima by\beamer@leftmargin%
  \advance\@tempdima by\beamer@rightmargin%
  \begin{beamercolorbox}[sep=0.0cm,#1,wd=\the\@tempdima]{frametitle}
    \usebeamerfont{frametitle}%
    \if@tempswa\else\csname beamer@fte#1\endcsname\fi%
    \hskip-4pt\insertframetitle\strut\par%
    {%
      \ifx\insertframesubtitle\@empty%
      \else%
      \vskip-15pt\hskip0.5ex {\usebeamerfont{framesubtitle}\usebeamercolor[fg]{framesubtitle}\insertframesubtitle\strut\par}%
      \fi
    }%
  \end{beamercolorbox}%
}

