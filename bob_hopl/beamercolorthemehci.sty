\definecolor{hcigrey2}{rgb}{0.5,0.5,0.5}
\definecolor{hcigrey3}{rgb}{0.9,0.9,0.9}

\setbeamercolor{normal text}{fg=black}
\setbeamercolor{structure}{fg=hcigreen}
\setbeamercolor{section in toc}{fg=hcigrey,bg=white}
\setbeamercolor{alerted text}{fg=hciorange}
